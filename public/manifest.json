{
  "name": "Asciidoctor Chrome Extension Asciicopier",
  "description": "Asciidoctor, Chrome Extension, TypeScript",
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "42.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "img/icon_48.png",
    "default_title": "Asciicopier - Copy as AsciiDoc",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "36": "img/icon_36.png",
    "48": "img/icon_48.png",
    "57": "img/icon_57.png",
    "60": "img/icon_60.png",
    "72": "img/icon_72.png",
    "76": "img/icon_76.png",
    "96": "img/icon_96.png",
    "114": "img/icon_114.png",
    "120": "img/icon_120.png",
    "144": "img/icon_144.png",
    "152": "img/icon_152.png",
    "180": "img/icon_180.png",
    "192": "img/icon_192.png"
  },
  "author": "D瓜哥（diguage）",
  "homepage_url": "https://www.diguage.com/"
}
